@model IEnumerable<And.Eticaret.Core.Model.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Ürün Listesi</h2>

<p>
    @Html.ActionLink("Yeni Ürün Gir", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
