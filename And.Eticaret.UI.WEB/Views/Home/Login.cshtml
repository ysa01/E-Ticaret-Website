
@{
    ViewBag.Title = "Login";
}

<h2>Üye Giriş Sayfası</h2>
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
}
<html>
<head>
    <style>
        .left {
            width: 120px;
            float: left;
            margin: 5px;
        }

        .right {
            width: 220px;
            float: left;
            margin: 5px;
        }

        .btn {
            width: 150px;
            position: absolute;
            left: 180px;
            margin: 5px;
        }
    </style>
</head>

<body>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form action="/Uye-Giris" method="post">
                <label class="left">Email :</label>
                <input class="right form-control" type="email" name="email" value="" placeholder="Email Giriniz." />
                <div class="row"></div>
                <label class="left">Password :</label>
                <input class="right form-control" type="password" name="password" value="" placeholder="Şifre Giriniz." />
                <div class="row"></div>
                <button type="submit" class="btn btn-success">Giriş Yap</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</body>
</html>